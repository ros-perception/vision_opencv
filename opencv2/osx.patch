--- interfaces/python/CMakeLists.txt	(revision 2200)
+++ interfaces/python/CMakeLists.txt	(working copy)
@@ -24,4 +24,14 @@
 target_link_libraries(${the_target} ${PYTHON_LIBRARIES} cxcore cv highgui)
 set_target_properties(${the_target} PROPERTIES PREFIX "")
 set_target_properties(${the_target} PROPERTIES OUTPUT_NAME "cv")
-install(FILES ${LIBRARY_OUTPUT_PATH}/cv.so DESTINATION ${PYTHON_PACKAGES_PATH})
+
+# If on OS X, install cv.dylib, because that's what gets built.  But then
+# copy it to cv.so, because that's what MacPorts python needs to execute
+# 'import cv'.
+include(CMakeDetermineSystem)
+if(CMAKE_SYSTEM_NAME MATCHES "Darwin")
+  install(FILES ${LIBRARY_OUTPUT_PATH}/cv.dylib DESTINATION ${PYTHON_PACKAGES_PATH})
+  install(CODE "execute_process(COMMAND cmake -E copy ${CMAKE_INSTALL_PREFIX}/${PYTHON_PACKAGES_PATH}/cv.dylib ${CMAKE_INSTALL_PREFIX}/${PYTHON_PACKAGES_PATH}/cv.so)")
+else(CMAKE_SYSTEM_NAME MATCHES "Darwin")
+  install(FILES ${LIBRARY_OUTPUT_PATH}/cv.so DESTINATION ${PYTHON_PACKAGES_PATH})
+endif(CMAKE_SYSTEM_NAME MATCHES "Darwin")
